<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>

    </style>

    <style name="item_height">
        <item name="android:height">15dp</item>
    </style>


    <style name="edittext_border">
        <item name="android:inputType">text</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/baseline_filter_list_black_48</item>
    </style>


<style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored"/>


    <style name="customTabTextSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12.78sp</item>
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="normalFontWhite">
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="normalFontBaseColor">
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/base_color</item>
    </style>

    <style name="normalFontGrey">
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="bigFontWhite" parent="normalFontWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bigFontBaseColor" parent="normalFontBaseColor">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonFont">
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22.22sp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="ButtonFont_negative" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22.22sp</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/test</item>
    </style>


    <style name="ButtonX">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/button_x</item>
    </style>

    <style name="ToggleButton">
        <item name="android:background">@drawable/button_radio</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12.78sp</item>
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editText" >
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/loginEditTextHeight</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">22.22sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/base_color</item>
        <item name="android:textColorHint">@color/login_with_color</item>
    </style>

    <style name="editTextEmail">
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">@dimen/loginEditTextWidth</item>
        <item name="android:layout_height">@dimen/loginEditTextHeight</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:hint">@string/email</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textSize">22.22sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/base_color</item>
        <item name="android:textColorHint">@color/login_with_color</item>
    </style>

    <style name="editTextPassword">
        <item name="android:fontFamily">@font/nowayround_regular</item>
        <item name="android:layout_width">@dimen/loginEditTextWidth</item>
        <item name="android:layout_height">@dimen/loginEditTextHeight</item>
        <item name="android:background">@drawable/edittextborder</item>
        <item name="android:hint">@string/password</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textSize">22.22sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/base_color</item>
        <item name="android:textColorHint">@color/login_with_color</item>
    </style>

    <style name="MySwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorSwitchThumbNormal">@color/gray</item>
        <item name="android:colorControlActivated">@color/green</item>
    </style>

</resources>


